@import "./_vars.styl"

.hero
  background rgba(#0f1c33, 0.5)
  align-items center
  display flex
  flex-direction column
  height 100%
  justify-content center
  overflow hidden
  padding 1em
  position relative
  text-align center
  width 100%

  &:before
    background url("/hero-img.jpg")
    background-size cover
    background-position center
    content ""
    height 100%
    filter blur(5px)
    left 0
    position absolute
    top 0
    transform scale(1.05)
    width 100%
    z-index: -1

  h1
    color: white
    font-size 6em
    font-weight 800
    margin 0
    @media screen and (max-width: 700px)
      font-size 3.5em

    p
      display inline-block
      margin 0 0.1em
      text-align center

  .subtitle
    color: white
    font-size 1.25em
    font-weight 300
    line-height 1.6
    margin 2em 0
    max-width 30em
    @media screen and (max-width: 700px)
      font-size 1em

    b
      font-weight 500
